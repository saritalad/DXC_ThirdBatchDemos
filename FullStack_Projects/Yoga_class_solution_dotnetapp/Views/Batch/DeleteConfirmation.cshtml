@model dotnetapp.Models.Batch
 
<h2>Delete Batch</h2>
 
<div>
    <p>Are you sure you want to delete this batch?</p>
    <dl class="row">

        <dt class="col-sm-2">Start Time</dt>
        <dd class="col-sm-10">@Model.StartTime</dd>
        <dt class="col-sm-2">End Time</dt>
        <dd class="col-sm-10">@Model.EndTime</dd>
        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>
    </dl>
    <form asp-controller="Batch" asp-action="DeleteBatch" asp-route-id="@Model.BatchID" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="AvailableBatches" class="btn btn-secondary">Cancel</a>
    </form>
</div>

