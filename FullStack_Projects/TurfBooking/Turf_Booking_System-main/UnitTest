    _context.SaveChanges();


    var loanApplicationData = new Dictionary<string, object>
        {
            { "LoanApplicationId", 200 },
            { "UserId", 400 },
            { "LoanId", 100 },
            { "SubmissionDate", DateTime.Now },
            { "Income", 50000m },
            { "Model", DateTime.Now },
            { "PurchasePrice", 250000m },
            { "LoanStatus", 1 },
            { "Address", "123 Main St, City, Country" },
            { "File", "loan_application.pdf" }
        };
